</head>
<body>

<div class="container">

    <%- include('partials/nav') %>

    <h1>Listes URL</h1>


 
     
        <!-- Liste des url -->
     

        
          
           <div class="row">
 <% if (products) { %>
            <% for (var i = 0; i < products.length; i++) { %>

            <div class="col-md-4">
               <div class="card mb-4">
                  <div class="card-body">
                     <h5 class="card-title">Votre URL</h5>
                     <p class="card-text">Id:<%= products[i]._id %></p>
                     <a class="btn btn-outline-dark btn-sm"target="_blank" role="button" href="/qrcode/<%= products[i]._id %>"><%= products[i].url %></a>
                  </div>
               </div>
            </div>
            <% } %> 
         <% } %> 
         </div>
        
    <!-- Pagination -->

    <div class="text-center">
    <nav aria-label="Page navigation example" style="display: inline-block;">
        <ul class="pagination ">
           <%for(let i =1; i <= pageCount;  i++ ) {  %>
          <li class="page-item active"><a class="page-link"  href="/page?page=<%=i%>"><%=i%></a></li>
          <% } %>
        </ul>
      </nav>
    </div>


</div>







